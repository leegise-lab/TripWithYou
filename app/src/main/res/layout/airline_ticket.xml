<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/border1"
        android:layout_width="160dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@id/go"
        app:layout_constraintBottom_toBottomOf="@id/gocity"

        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:background="@drawable/border"
        >
    </TextView>

    <TextView
        android:id="@+id/go"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintRight_toLeftOf="@id/doc"
        android:text="출발지가 어디인가요?"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        ></TextView>
    <TextView
        android:id="@+id/gocity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/go"
        app:layout_constraintLeft_toLeftOf="@id/go"
        android:text="서울, 대한민국"
        android:textSize="15dp"
        android:textColor="#000000"
        ></TextView>

    <TextView
        android:id="@+id/border2"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginRight="44dp"
        android:background="@drawable/border"
        app:layout_constraintBottom_toBottomOf="@id/doccity"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/doc"
        app:layout_constraintVertical_bias="0.545"></TextView>

    <TextView
        android:paddingLeft="12dp"
        android:id="@+id/doc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:text="어디로 떠나세요?"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/go"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/go"></TextView>

    <TextView
        android:id="@+id/doccity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:text="울란바토르, 몽골"
        android:textColor="#000000"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="@id/doc"
        app:layout_constraintTop_toBottomOf="@id/doc"></TextView>

    <TextView
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginRight="44dp"
        android:background="@drawable/border"
        app:layout_constraintBottom_toBottomOf="@id/godate"
        app:layout_constraintLeft_toLeftOf="@id/border1"
        app:layout_constraintTop_toTopOf="@id/date"></TextView>

    <TextView
        android:id="@+id/date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="날짜"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="@id/go"
        app:layout_constraintTop_toBottomOf="@id/doccity"></TextView>

    <TextView
        android:id="@+id/godate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3월 7일 ~ 3월 14일"
        android:textColor="#000000"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="@id/date"
        app:layout_constraintTop_toBottomOf="@id/date"></TextView>
    <TextView
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginRight="44dp"
        android:background="@drawable/border"
        app:layout_constraintBottom_toBottomOf="@id/peo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/person"
        ></TextView>

    <TextView
        android:paddingLeft="12dp"
        android:id="@+id/person"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:text="인원"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="@id/doc"
        app:layout_constraintTop_toBottomOf="@id/border2"
        app:layout_constraintTop_toTopOf="@id/date"></TextView>

    <TextView
        android:id="@+id/peo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:text="2"
        android:textColor="#000000"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="@id/person"
        app:layout_constraintTop_toBottomOf="@id/person"></TextView>
    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="￦1,106,301"
        app:layout_constraintTop_toTopOf="@id/godate"
        android:layout_marginTop="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        android:textSize="25dp"
        ></TextView>
    <TextView
        android:id="@+id/ff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/price"
        app:layout_constraintLeft_toLeftOf="@id/price"
        android:text="대한항공 오전 10:10 출발 오후 2:00 도착                     1시간 50분"
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ICN - ULN"
        app:layout_constraintTop_toBottomOf="@id/ff"
        app:layout_constraintLeft_toLeftOf="@+id/ff"
        ></TextView>


</androidx.constraintlayout.widget.ConstraintLayout>
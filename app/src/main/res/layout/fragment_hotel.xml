<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/calender"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:drawableLeft="@drawable/ic_date_range_black_24dp"
        android:drawablePadding="5dp"
        android:paddingLeft="20dp"
        android:text="3월7일-3월8일, 1박"
        android:textAlignment="viewStart"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/bed_btn"
        android:background="#BDBDBD"/>

        <Button
            android:id="@+id/bed_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/calender"
            app:layout_constraintBottom_toBottomOf="@id/calender"
            app:layout_constraintLeft_toRightOf="@id/calender"
            app:layout_constraintRight_toLeftOf="@id/people_btn"
            app:layout_constraintHorizontal_weight="0.7"
            android:paddingLeft="10sp"
            android:drawableLeft="@drawable/ic_local_hotel_black_24dp"
            android:text="1"
            android:background="#BDBDBD" />
        <Button
            android:id="@+id/people_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/bed_btn"
            app:layout_constraintTop_toTopOf="@id/calender"
            app:layout_constraintBottom_toBottomOf="@id/calender"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_weight="0.7"
            android:paddingLeft="10sp"
            android:drawableLeft="@drawable/ic_people_outline_black_24dp"
            android:text="2"
            android:background="#BDBDBD"/>

    <TextView
        android:id="@+id/hotel_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="서울 숙박시설"
        app:layout_constraintTop_toBottomOf="@id/calender"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>
    <ImageView
        android:id="@+id/hotel_img"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/ic_home_black_24dp"
        app:layout_constraintTop_toBottomOf="@id/hotel_text"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/hotel_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/hotel_img"
        app:layout_constraintLeft_toLeftOf="@id/hotel_text"
        android:text="신라 호텔" />
    <TextView
        android:id="@+id/hotel_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/hotel_name"
        app:layout_constraintLeft_toLeftOf="@id/hotel_text"
        android:text="●●●●●리뷰"/>
    <TextView
        android:id="@+id/hotel_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/hotel_score"
        app:layout_constraintLeft_toLeftOf="@id/hotel_text"
        android:text="￦200,192"/>

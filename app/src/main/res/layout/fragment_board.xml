<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
        <TextView
            android:id="@+id/d"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="전체글"
            android:textSize="20dp"
            android:textColor="#000000">
        </TextView>
        <TextView
            android:id="@+id/s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인기글"
            android:textSize="20dp"
            app:layout_constraintLeft_toRightOf="@id/d"
            app:layout_constraintTop_toTopOf="@id/d"
            android:layout_marginLeft="20dp"></TextView>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/s"
            android:layout_marginTop="5dp"
            android:background="#000000"></View>


        <TextView
            android:id="@+id/board_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/d"
            app:layout_constraintLeft_toLeftOf="@id/d"
            android:text="3월 8일 ~ 4월 12일 몽골 같이가요~"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/board_title"
            app:layout_constraintLeft_toLeftOf="@id/board_title"
            android:text="징기즈칸"></TextView>
        <Button
            android:id="@+id/reply"
            android:layout_width="50dp"
            android:layout_height="70dp"
            app:layout_constraintTop_toTopOf="@id/board_title"
            app:layout_constraintRight_toRightOf="parent"
            android:text="0   댓글"></Button>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:background="#000000"
            app:layout_constraintTop_toBottomOf="@id/reply"
            tools:layout_editor_absoluteX="0dp"></View>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/enjoy_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인기 음식점"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"/>
    <Button
        android:id="@+id/upload_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="즐길거리 정보 추가"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/asd"
        android:layout_width="300dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@id/enjoy_text"
        app:layout_constraintLeft_toLeftOf="@id/enjoy_text"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_home_black_24dp"></ImageView>

    <TextView
        android:id="@+id/enjoy_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/asd"
        app:layout_constraintLeft_toLeftOf="@id/enjoy_text"
        android:layout_marginTop="10dp"
        android:text="베이커리"
        android:textColor="#000000"></TextView>
    <TextView
        android:id="@+id/enjoy_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/enjoy_name"
        app:layout_constraintLeft_toLeftOf="@id/enjoy_text"
        android:textColor="#000000"
        android:text="●●●●●● 리뷰"
        />
    <TextView
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/enjoy_score"
        app:layout_constraintLeft_toLeftOf="@id/enjoy_text"
        android:text="음식점"
        android:textColor="#000000"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/category"
        app:layout_constraintLeft_toLeftOf="@id/enjoy_text"
        android:text="카테고리(ex야외활동, 고급 레스토랑)"
        android:layout_marginTop="30dp"></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>